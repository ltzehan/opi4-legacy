<!-- -*- mode: XML -*- -->

<launch>

  <arg name="cam_name" default="camera"/>
  <arg name="dev_name" default="/dev/video0"/>
  <arg name="vid_fmt" default="RGBx"/>
  <arg name="vid_width" default="2112"/>
  <arg name="vid_height" default="1568"/>
  <arg name="vid_fps" default="30/1"/> 

  <node pkg="gscam" type="gscam" name="$(arg cam_name)">
    <param name="gscam_config" value="rkisp device=$(arg dev_name) ! video/x-raw,format=$(arg vid_fmt),width=$(arg vid_width),height=$(arg vid_height),framerate=$(arg vid_fps) ! ffmpegcolorspace"/>
    <param name="camera_name" value="$(arg cam_name)" />
    <param name="frame_id" value="/camera_frame" /> 
    <remap from="camera/image_raw" to="image_raw" />
  </node>

</launch>

